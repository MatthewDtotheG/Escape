<h1>Edit Reservation Dates</h1>

<h5><strong><%= @reservation.item.name.capitalize %></strong></h5>
<h5><strong>Description:</strong></h5>
<p><%= @reservation.item.description.capitalize %><p>

<h5><strong>Price/Day:</strong></h5>
<p>$<%= @reservation.item.price %><p>

<%= form_for @reservation do |f| %>
  <%= f.label "Rent Start Date" %><br>
  <%= f.date_select :rent_start, :start_year => Date.current.year, :end_year =>  Date.current.year + 10, :use_two_digit_numbers => true %><br></br>
  <%= label_tag "Rent End Date" %><br>
  <%= f.date_select :rent_end, :start_year => Date.current.year, :end_year =>  Date.current.year + 10, :use_two_digit_numbers => true %><br></br>
  <%= f.submit "Rent" %>
<% end  %>
