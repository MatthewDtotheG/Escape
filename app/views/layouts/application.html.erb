<!DOCTYPE html>
<html>
  <head>
    <title>Escape</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1>Escape Outdoors</h1>
    <% if !logged_in? %>
      <%= button_to "Login", login_path, method: :get %>
      <%= button_to "Create Account", new_user_path, method: :get %>
    <% else %>
      <%= button_to "Log out", logout_path, method: :post %>
    <% end %>
    <%= yield %>
  </body>
</html>
