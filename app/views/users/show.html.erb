
<!-- Display user profile if buyer display bought items -->

<div class="container">

  <div class="profile_info">
    <img class="profpic" src="/IMG2.jpg" alt="">
    <h2> <%= @user.name %></h2>
    <h2> <%= @user.email %></h2>
    <h2> <%= @user.location.name %></h2>
  </div>

<% if seller_check = true %>

    <div class="row">
      <% @user.items.each do |item|%>
      <div class="card right" style="width: 30%;">
        <img class="card-img-top" src="/IMG1.jpg" alt="Card image cap">
        <div class="card-body">
          <p class="card-text">
            <%= link_to item.name, item_path(item.id) %>
            <%= item.description %>
          </p>
        </div>
        <% end %>
      </div>

<% end %>
