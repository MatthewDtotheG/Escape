<div class="container">
  <div class="row">
    <div class="form-group col-lg-5">
      <div class="rent_item">
      <%= form_for @item do |f| %>
        <%= f.label "Name:" %> <br>
        <%= f.text_field :name, :class => 'form-control'%><br>
        <%= f.label "Description:" %> <br>
        <%= f.text_field :description, :class => 'form-control'%><br>
        <%= f.label "Price per Day:" %><br>
        <%= f.number_field :price, :class => 'form-control'%><br>
        <%= f.label "Category:" %><br>
        <%= f.select :category, options_for_select(Item.all_categories), :class => 'form-control' %><br>
        <%= f.hidden_field :seller_id, value: session[:user_id] %><br>
        <%= f.submit :class => 'btn btn-primary' %>
      </div>
    </div>
      <% end %>
    </div>
</div>
