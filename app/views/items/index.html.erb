


<!-- Display user profile if buyer display bought items
  user.rentals 
-->

  <div class="container">

      <div class="row">
        <% @items.each do |item|%>
        <div class="card right" style="width: 30%;">
          <img class="card-img-top" src="/IMG1.jpg" alt="Card image cap">
          <div class="card-body">
            <p class="card-text">
            <%= link_to item.name, item_path(item.id) %>
            <%= item.description %>
           </p>
          </div>
        </div>
        <% end %>
      </div>

  </div>

